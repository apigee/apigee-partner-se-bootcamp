<OAuthV2 name='OAuthV2-VerifyAccessToken'>
  <DisplayName>OAuthV2 - VerifyAccessToken</DisplayName>
  <Operation>VerifyAccessToken</Operation>
  <!-- pulls token from Authorization header as per OAuthV2.0 spec -->
  <!--
      This policy sets the following flow variables:
      organization_name
      developer.id
      developer.app.name
      client_id
      grant_type
      token_type
      access_token
      accesstoken.{custom_attribute}
      issued_at
      expires_in
      status
      scope
      apiproduct.name*
      apiproduct.<custom_attribute_name>*
  -->

<!-- Optional
  <AccessToken>flow.variable</AccessToken>
  <AccessTokenPrefix>Bearer</AccessTokenPrefix>
-->

</OAuthV2>
